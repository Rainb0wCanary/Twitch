{
  "manifest_version": 3,
  "name": "Drops — Auto Collector",
  "version": "1.2.0",
  "description": "Расширение для автоматизированного сбора Drops",
  "permissions": ["scripting", "storage", "activeTab", "tabs"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"     
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  